<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/day_picker"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:np_dividerColor="@color/colorPrimary"
        app:np_formatter=""
        app:np_max="10"
        app:np_min="0"
        app:np_order="descending"
        app:np_orientation="vertical"
        app:np_selectedTextColor="@color/colorPrimary"
        app:np_selectedTextSize="18sp"
        app:np_textColor="@color/colorPrimary"
        app:np_textSize="16sp"
        app:np_typeface=""
        app:np_wrapSelectorWheel="true" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/month_picker"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/separator1"
        app:layout_constraintTop_toTopOf="parent"
        app:np_dividerColor="@color/colorPrimary"
        app:np_formatter=""
        app:np_max="10"
        app:np_min="0"
        app:np_order="descending"
        app:np_orientation="vertical"
        app:np_selectedTextColor="@color/colorPrimary"
        app:np_selectedTextSize="18sp"
        app:np_textColor="@color/colorPrimary"
        app:np_textSize="16sp"
        app:np_typeface=""
        app:np_wrapSelectorWheel="true" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/year_picker"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/separator2"
        app:layout_constraintTop_toTopOf="parent"
        app:np_dividerColor="@color/colorPrimary"
        app:np_formatter=""
        app:np_max="10"
        app:np_min="0"
        app:np_order="descending"
        app:np_orientation="vertical"
        app:np_selectedTextColor="@color/colorPrimary"
        app:np_selectedTextSize="18sp"
        app:np_textColor="@color/colorPrimary"
        app:np_textSize="16sp"
        app:np_typeface=""
        app:np_wrapSelectorWheel="true" />

    <TextView
        android:id="@+id/separator1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="/"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/day_picker"
        app:layout_constraintStart_toEndOf="@+id/day_picker"
        app:layout_constraintTop_toTopOf="@+id/day_picker" />

    <TextView
        android:id="@+id/separator2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="/"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/day_picker"
        app:layout_constraintStart_toEndOf="@+id/month_picker"
        app:layout_constraintTop_toTopOf="@+id/day_picker" />
</androidx.constraintlayout.widget.ConstraintLayout>